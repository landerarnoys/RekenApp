@model Wiskunde_App.Models.Klas

@{
    ViewBag.Title = "EditKlas";
}

<h2>EditKlas</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Klas</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.KlasNaam, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KlasNaam)
                @Html.ValidationMessageFor(model => model.KlasNaam)
            </div>
        </div>

       

        <div class="form-group">
            @Html.LabelFor(model => model.MaximumAantalLeerlingen, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaximumAantalLeerlingen)
                @Html.ValidationMessageFor(model => model.MaximumAantalLeerlingen)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

