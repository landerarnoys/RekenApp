@model Wiskunde_App.Models.Leerkracht

@{
    ViewBag.Title = "EditLeerkracht";
}

<h2>EditLeerkracht</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Leerkracht</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.VoorNaam, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VoorNaam)
                @Html.ValidationMessageFor(model => model.VoorNaam)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FamilieNaam, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FamilieNaam)
                @Html.ValidationMessageFor(model => model.FamilieNaam)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}



