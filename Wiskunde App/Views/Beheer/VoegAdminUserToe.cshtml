@model Wiskunde_App.ViewModels.SAViewModel

@{
    ViewBag.Title = "VoegAdminUserToe";
    Layout = "~/Views/Shared/_layoutsuper.cshtml";
}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <ul class="nav nav-pills nav-stacked">
                    <li><a href="@Url.Action("Dashboard", "Super")">Scholen</a></li>
                    <li class="active"><a href="">Voeg schooladministrator toe</a></li>
                    <li><a href="@Url.Action("overzichtadmins","Super")">Overzicht schooladministrators</a></li>
                    <li><a href="@Url.Action("Accountwijzigen","Super")">Account wijzigen</a></li>
                </ul>
            </div>

            <div class="col-md-9 well">
            <h1>Nieuwe schooladministrator</h1>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true);

                    <div class="form-horizontal">
                        <hr />
                        <div class="form-group">
                            @Html.LabelFor(model => model.Voornaam, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Voornaam)
                                @Html.ValidationMessageFor(model => model.Voornaam)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Familienaam, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Familienaam)
                                @Html.ValidationMessageFor(model => model.Familienaam)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.Label("Schoolkeuze", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                        <select name="schoolkeuze">
                                            @foreach (var item in Model.scholen)
                                            {
                                                <option value="@Html.DisplayFor(ModelItem => item.ID)">@Html.DisplayFor(ModelItem => item.Naam)</option>
                                            }
                                        </select>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Gebruikersnaam, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Gebruikersnaam)
                                @Html.ValidationMessageFor(model => model.Gebruikersnaam)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Wachtwoord, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Wachtwoord)
                                @Html.ValidationMessageFor(model => model.Wachtwoord)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Schooladministrator toevoegen" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
