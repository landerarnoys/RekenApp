@model Wiskunde_App.Models.School

@{
    ViewBag.Title = "Delete";
    Layout = "";
}


<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Wiskunde App || Verwijder school</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        body {
            padding-top: 50px;
            background-color: #f5f5f5;
        }
    </style>
</head>

<body>
    <div class="container">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <img src="~/Images/florMenuKlein.png" class="logoFlorMenu" />
                    <a class="navbar-brand">Flor het rekenmonster | dashboard Superuser</a>
                </div>
                <div class="navbar-collapse collapse">
                    <form class="navbar-form navbar-right" method="post" action="/Beheer/Uitloggen">
                        @Html.AntiForgeryToken()
                        <input type="submit" class="form-control" value="Uitloggen">
                    </form>
                </div>
            </div>
        </nav>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <ul class="nav nav-pills nav-stacked">
                    <li class="active"><a href="#">Klassen overzicht</a></li>
                    <li><a href="#">Leerkrachten overzicht</a></li>
                    <li><a href="#">Leerlingen overzicht</a></li>
                    <li><a href="#">Edit schooladmin</a></li>
                </ul>
            </div>
            <div class="col-md-9 well">
                <h2>Verwijder school</h2>

                <h3>Ben jij zeker dat je deze school wil verwijderen??</h3>
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Naam)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Naam)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Adres)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Adres)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Huisnummer)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Huisnummer)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Postcode)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Postcode)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Gemeente)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Gemeente)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.LogoUrl)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.LogoUrl)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="School verwijderen" class="btn btn-default" /> |
                            @Html.ActionLink("Terug naar overzicht", "Dashboard")
                        </div>
                    }
                </div>

            </div>
        </div>
    </div>

    <!-- JQuery-->
    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <!--Bootstrap-->
    <script src="../Scripts/bootstrap.js"></script>
    <script src="../Scripts/bootstrap.min.js"></script>
</body>

</html>
