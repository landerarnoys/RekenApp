@model Wiskunde_App.Models.ApplicationUser

@{
    ViewBag.Title = "Wijzigadministrator";
    Layout = "~/Views/Shared/_layoutsuper.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <ul class="nav nav-pills nav-stacked">
                <li><a href="@Url.Action("Dashboard", "Super")">Scholen</a></li>
                <li><a href="@Url.Action("VoegAdminUserToe", "Beheer")">Voeg schooladministrator toe</a></li>
                <li class="active"><a href="">Overzicht schooladministrators</a></li>
                <li><a href="@Url.Action("Accountwijzigen", "Super")">Account wijzigen</a></li>
            </ul>
        </div>
        <div class="col-md-9 well">

            <h2>Wijzig administrator</h2>

            @using (Html.BeginForm("Wijzigadministrator" , "Super", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        @Html.LabelFor(model => model.Voornaam, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Voornaam)
                            @Html.ValidationMessageFor(model => model.Voornaam)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Familienaam, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Familienaam)
                            @Html.ValidationMessageFor(model => model.Familienaam)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Schoolkeuze", htmlAttributes: new { @class = "control-label col-md-2"})
                        <div class="col-md-10">
                            <select name="schoolkeuze">
                                @foreach (var item in Model.scholen)
                                {
                                    <option value="@Html.DisplayFor(ModelItem => item.ID)">@Html.DisplayFor(ModelItem => item.Naam)</option>
                                }
                            </select>

                        </div>
                    </div>

                    @*<div class="form-group">
                        @Html.Label("Schoolnaam", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.school.Naam, new {  @readonly="readonly", id= @Model.school.ID})
                            @Html.ValidationMessageFor(model => model.school.Naam)
                        </div>
                    </div>*@

                    <div class="form-group">
                        @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.UserName)
                            @Html.ValidationMessageFor(model => model.UserName)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Wachtwoord", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="text" name="wachtwoord" />
                        </div>
                    </div>

                    <!--<div class="form-group">
                        @Html.LabelFor(model => model.KlasID, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.KlasID)
                            @Html.ValidationMessageFor(model => model.KlasID)
                        </div>
                    </div>-->

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Wijzigen" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Terug naar ovezicht", "overzichtadmins")
            </div>
</div>
</div>
</div>