@model IEnumerable<Wiskunde_App.Models.School>

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_layoutsuper.cshtml";
}
<div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <ul class="nav nav-pills nav-stacked">
                    <li class="active"><a href="">Scholen</a></li>
                    <li><a href="@Url.Action("VoegAdminUserToe", "Beheer")">Voeg schooladministrator toe</a></li>
                    <li><a href="@Url.Action("overzichtadmins", "Super")">Overzicht schooladministrators</a></li>
                    <li><a href="@Url.Action("Accountwijzigen", "Super")">Account wijzigen</a></li>
                </ul>
            </div>
            <div class="col-md-9 well">

                <h1>Scholenoverzicht</h1>
                <p>
                    @Html.ActionLink("Voeg nieuwe school toe", "Nieuweschool")
                </p>   
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Naam)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Adres)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Huisnummer)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Postcode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Gemeente)
                        </th>
                        <th>
                            Wijzigen/toevoegen scholen
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Naam)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Adres)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Huisnummer)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Postcode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Gemeente)
                            </td>
                            <td>
                                @Html.ActionLink("Wijzig school", "Wijzigschool", new { id = item.ID }) |
                                @Html.ActionLink("Bekijk school", "Details", new { id = item.ID }) |
                                @Html.ActionLink("Verwijder school", "Delete", new { id = item.ID })
                            </td>
                        </tr>
                    }

                </table>   

            </div>
        </div>
    </div>